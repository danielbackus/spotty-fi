{
  "name": "spotty-fi-api",
  "version": "0.1.0",
  "scripts": {
    "lint": "npx eslint ./src/**.ts && node src/index.ts",
    "watch": "npx ts-node-dev --project src/tsconfig.json --transpile-only src",
    "debug": "npx nodemon --legacy-watch --watch ./dist --inspect=0.0.0.0:5858 --nolazy ./dist/index.js",
    "docker-debug": "docker-compose up",
    "start": "ts-node src/index.ts"
  },
  "devDependencies": {
    "@types/express": "^4.17.3",
    "@types/node": "^8.0.29",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "eslint": "^6.8.0",
    "eslint-config-problems": "^4.0.0",
    "husky": "^4.2.3",
    "nodemon": "^2.0.2",
    "prettier": "2.0.2",
    "pretty-quick": "^2.0.1",
    "ts-node": "3.3.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "3.3.3333"
  },
  "main": "./dist/index.js",
  "dependencies": {
    "eslint-config-prettier": "^6.10.1",
    "express": "^4.17.1",
    "mysql": "^2.14.1",
    "pg": "^7.18.2",
    "reflect-metadata": "^0.1.10",
    "typeorm": "0.2.24"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx pretty-quick --staged",
      "pre-push": "npm run lint"
    }
  }
}
